{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "materials_3d",
  "type": "object",
  "required": ["materials"],
  "properties": {
    "_meta": { 
      "type": "object",
      "properties": {
        "description": {"type": "string"},
        "units": {"type": "object"},
        "notes": {"type": "array", "items": {"type": "string"}}
      }
    },
    "materials": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": ["dim", "piezoelectric", "acoustic", "polar", "two_phonon"],
        "properties": {
          "dim": { "enum": ["3D"] },
          "description": { "type": "string" },
          "piezoelectric": { "type": "boolean" },
          "acoustic": {
            "type": "object",
            "required": ["alpha_dp", "alpha_pe", "omega_D", "cutoff_p"],
            "properties": {
              "alpha_dp": { "type": "number", "minimum": 0 },
              "alpha_pe": { "type": "number", "minimum": 0 },
              "omega_D": { "type": "number", "minimum": 0 },
              "cutoff_p": { "type": "number", "minimum": 1, "maximum": 3 },
              "vL": { "type": "number", "minimum": 0 },
              "vT": { "type": "number", "minimum": 0 }
            },
            "additionalProperties": false
          },
          "polar": {
            "type": "object",
            "properties": {
              "modes": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["omega0", "gamma", "weight"],
                  "properties": {
                    "omega0": { "type": "number", "minimum": 0 },
                    "gamma":  { "type": "number", "minimum": 0 },
                    "weight": { "type": "number", "minimum": 0 },
                    "type": { "type": "string" }
                  },
                  "additionalProperties": false
                }
              }
            },
            "additionalProperties": false
          },
          "two_phonon": {
            "type": "object",
            "required": ["raman_alpha", "raman_p", "orbach_omega", "orbach_gamma", "orbach_weight"],
            "properties": {
              "raman_alpha": { "type": "number", "minimum": 0 },
              "raman_p":     { "type": "number", "minimum": 0 },
              "orbach_omega":{ "type": "number", "minimum": 0 },
              "orbach_gamma":{ "type": "number", "minimum": 0 },
              "orbach_weight":{ "type": "number", "minimum": 0 }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}